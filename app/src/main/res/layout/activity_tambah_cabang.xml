<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgtambahactivity"
    android:padding="5dp"
    tools:context=".cabang.TambahCabang">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTambahCabang"
        android:text="Tambah Cabang"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins_bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamaCabang"
        android:text="@string/nama_cabang"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTambahCabang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/nama_cabang"
        android:fontFamily="@font/poppins"
        android:textColorHint="#bbbbbb"
        android:paddingStart="10dp"
        android:id="@+id/etNamaCabang"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaCabang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAlamatCabang"
        android:text="Alamat Cabang"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaCabang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Alamat Cabang"
        android:fontFamily="@font/poppins"
        android:id="@+id/etAlamatCabang"
        android:textColorHint="#bbbbbb"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvAlamatCabang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNohpCabang"
        android:text="No HP Cabang"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAlamatCabang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="No HP Cabang"
        android:fontFamily="@font/poppins"
        android:id="@+id/etNohpCabang"
        android:textColorHint="#bbbbbb"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNohpCabang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvManagerCabang"
        android:text="Manager Cabang"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNohpCabang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Manager Cabang"
        android:fontFamily="@font/poppins"
        android:id="@+id/etManagerCabang"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:textColorHint="#bbbbbb"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvManagerCabang"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="@string/bsimpan"
        android:textColorHint="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etManagerCabang"/>


</androidx.constraintlayout.widget.ConstraintLayout>