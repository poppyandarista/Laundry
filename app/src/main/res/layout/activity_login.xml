<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".login.Login">

    <ImageView
        android:id="@+id/topBg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/top_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogoLaundry"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/akun"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/selamatdatang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/sapaanlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Silakan login untuk melanjutkan"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/topBg"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvNoHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:textColor="@color/blackwhite"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="No HP"
            android:fontFamily="@font/poppins"
            android:textColorHint="#bbbbbb"
            android:paddingStart="10dp"
            android:id="@+id/etNoHp"
            android:background="@drawable/border_editor"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvPassword"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/blackwhite"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:fontFamily="@font/poppins"
            android:textColorHint="#bbbbbb"
            android:paddingStart="10dp"
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:background="@drawable/border_editor"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/bLogin"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:fontFamily="@font/poppins_bold"
            android:textColorHint="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/button"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>