<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgtambahactivity"
    android:padding="5dp"
    tools:context=".layanan.TambahLayanan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTambahLayanan"
        android:text="@string/card_tambah_layanan"
        android:textColor="@color/blackwhite"
        android:fontFamily="@font/poppins_bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamaLayanan"
        android:text="@string/card_layanan_namalayanan"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTambahLayanan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_layanan_namalayanan"
        android:textColorHint="#bbbbbb"
        android:fontFamily="@font/poppins"
        android:id="@+id/etNamaLayanan"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaLayanan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCabangLayanan"
        android:text="@string/tv_cabang"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaLayanan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/tv_cabang"
        android:fontFamily="@font/poppins"
        android:textColorHint="#bbbbbb"
        android:id="@+id/etCabangLayanan"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvCabangLayanan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHargaLayanan"
        android:text="@string/card_harga_layanan"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCabangLayanan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_harga_layanan"
        android:fontFamily="@font/poppins"
        android:id="@+id/etHargaLayanan"
        android:paddingStart="10dp"
        android:background="@drawable/border_editor"
        android:textColorHint="#bbbbbb"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvHargaLayanan"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/bSimpan"
        android:text="@string/bsimpan"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etHargaLayanan"/>


</androidx.constraintlayout.widget.ConstraintLayout>