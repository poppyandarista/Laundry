<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCARD_TAMBAHAN"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvIdPelanggan"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="ID Tambahan"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:background="#7181C5"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamaLayananTambahan"
                android:text="@string/card_tambahan_namalayanan"
                android:textColor="@color/blackwhite"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHarga"
                android:textColor="@color/blackwhite"
                android:text="@string/card_tambahan_harga"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamaCabang"
                android:text="@string/card_tambahan_namacabang"
                android:textColor="@color/blackwhite"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatus"
                android:text="@string/card_tambahan_status"
                android:textColor="@color/blackwhite"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bHubungi"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="#185CB4"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bLihat"
                    android:text="@string/card_pelanggan_blihat"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="#54DED7"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>