<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_bg"
    android:padding="5dp"
    tools:context=".pegawai.tambah_pegawai">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTambahPegawai"
        android:text="@string/tv_tambah_pegawai"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/blackwhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNama"
        android:text="@string/tv_nama_lengkap"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTambahPegawai"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/tv_nama_lengkap"
        android:fontFamily="@font/poppins"
        android:paddingStart="10dp"
        android:textColorHint="#bbbbbb"
        android:textColor="@color/black"
        android:id="@+id/etNamaPegawai"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCabang"
        android:text="@string/card_cabang"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaPegawai"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_cabang"
        android:fontFamily="@font/poppins"
        android:id="@+id/etNamaCabangPegawai"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="#bbbbbb"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvCabang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAlamatPegawai"
        android:text="@string/card_pegawai_alamat"
        android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaCabangPegawai"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_pegawai_alamat"
        android:fontFamily="@font/poppins"
        android:textColorHint="#bbbbbb"
        android:id="@+id/etAlamatPegawai"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvAlamatPegawai"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvNohpPegawai"
    android:text="@string/card_pegawai_nohp"
    android:fontFamily="@font/poppins"
        android:textColor="@color/blackwhite"
    android:textSize="16sp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/etAlamatPegawai"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/card_pegawai_nohp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#bbbbbb"
        android:inputType="phone"
        android:id="@+id/etNohpPegawai"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:background="@drawable/border_editor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:maxLength="13"
        app:layout_constraintTop_toBottomOf="@id/tvNohpPegawai"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="@string/bsimpan"
        android:id="@+id/bSimpan"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNohpPegawai"/>


</androidx.constraintlayout.widget.ConstraintLayout>