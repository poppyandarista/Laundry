<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCARD_PILIH_PELANGGAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNoUrutan"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="[1]"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:background="#184B99"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tvNamaPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pelanggan_nama_pelanggan"
                android:textColor="@color/blackwhite"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blackwhite"
                android:text="@string/card_pelanggan_alamat"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/tvNoHpPelanggan"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:text="@string/card_pelanggan_nohp"
                android:textColor="@color/blackwhite"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
